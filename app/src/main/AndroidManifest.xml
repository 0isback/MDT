<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.mcpekorea.mdt"
    android:installLocation="auto" >

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".WorkspaceActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".CreateProjectActivity"
            android:label="@string/title_activity_create_project" >
        </activity>
        <activity
            android:name=".ProjectActivity"
            android:label=".PatchEditorActivity" >
        </activity>
        <activity
            android:name=".CreatePatchActivity"
            android:label="@string/title_activity_create_patch" >
        </activity>
        <activity
            android:name=".FileChooserActivity"
            android:label="@string/title_activity_file_chooser" >
        </activity>
        <activity
            android:name=".ExportProjectActivity"
            android:label="@string/title_activity_export_project" >
        </activity>
    </application>

</manifest>
